<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MenuFragment">
    <fragment
        android:id="@+id/MenuFragment"
        android:name="com.example.mytasky.ui.fragments.MenuFragment"
        android:label="Menu"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menu_to_habits"
            app:destination="@+id/HabitTrackerFragment"
            app:enterAnim="@anim/fade_in_right"
            app:exitAnim="@anim/fade_out_left"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out"
            />
        <action
            android:id="@+id/action_menu_to_tasks"
            app:destination="@+id/AddTaskFragment"
            app:enterAnim="@anim/fade_in_right"
            app:exitAnim="@anim/fade_out_left"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out"
            />
    </fragment>

    <fragment
        android:id="@+id/HabitTrackerFragment"
        android:name="com.example.mytasky.ui.fragments.HabitTrackerFragment"
        android:label="Habit"
        tools:layout="@layout/fragment_habit_tracker">
        <action
            android:id="@+id/action_habits_to_menu"
            app:destination="@+id/MenuFragment"
            app:enterAnim="@anim/fade_in_right"
            app:exitAnim="@anim/fade_out_left"
            app:popUpTo="@id/MenuFragment"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out"
            />
    </fragment>

    <fragment
        android:id="@+id/AddTaskFragment"
        android:name="com.example.mytasky.ui.fragments.AddTaskFragment"
        android:label="TaskAdding"
        tools:layout="@layout/fragment_add_task">
        <action
            android:id="@+id/action_tasks_to_menu"
            app:destination="@+id/MenuFragment"
            app:enterAnim="@anim/fade_in_right"
            app:exitAnim="@anim/fade_out_left"
            app:popUpTo="@id/MenuFragment"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out"
            />

    </fragment>

    <fragment
        android:id="@+id/AuthFragment"
        android:name="com.example.mytasky.ui.fragments.AuthFragment"
        android:label="Auth"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_auth_to_menu"
            app:destination="@+id/MenuFragment"
            app:enterAnim="@anim/fade_in_right"
            app:exitAnim="@anim/fade_out_left"
            app:popUpTo="@id/MenuFragment"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out"
            />
        <action
            android:id="@+id/action_auth_to_admin"
            app:destination="@+id/AdminFragment"
            app:enterAnim="@anim/fade_in_right"
            app:exitAnim="@anim/fade_out_left"
            app:popUpTo="@id/AdminFragment"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out"
            />
    </fragment>

    <fragment
        android:id="@+id/AdminFragment"
        android:name="com.example.mytasky.ui.fragments.AdminFragment"
        android:label="Admin"
        tools:layout="@layout/fragment_admin">
        <action
            android:id="@+id/action_admin_to_menu"
            app:destination="@+id/MenuFragment"
            app:enterAnim="@anim/fade_in_right"
            app:exitAnim="@anim/fade_out_left"
            app:popUpTo="@id/MenuFragment"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out"
            />
    </fragment>


</navigation>